<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nativeAdTemplateContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MergeRootFrame" android:orientation="horizontal"
    android:clickable="true"
    android:gravity="end"
    >

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomBarDes"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/row1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="0dp"
                android:orientation="vertical"
                android:padding="10dp"
                >
                <TextView
                    android:id="@+id/row1_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:textSize="20sp"
                    android:text="@string/row1_title"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/row1_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="@string/row1_content"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/row2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="0dp"
                android:orientation="vertical"
                android:padding="10dp"
                >
                <TextView
                    android:id="@+id/row2_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:textSize="20sp"
                    android:text="@string/row2_title"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/row2_subtitle1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:textSize="16sp"
                    android:text="@string/row2_subtitle1"
                    />
                <TextView
                    android:id="@+id/row2_content1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:textSize="16sp"
                    android:text="@string/row2_content1"
                    />
                <TextView
                    android:id="@+id/row2_subtitle2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:textSize="16sp"
                    android:text="@string/row2_subtitle2"
                    />
                <TextView
                    android:id="@+id/row2_content2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:textSize="16sp"
                    android:text="@string/row2_content2"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/native_ad_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:orientation="vertical"
                android:padding="8dp"
                >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/row3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="0dp"
                android:orientation="vertical"
                android:padding="10dp"
                >

                <TextView
                    android:id="@+id/row3_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:textSize="20sp"
                    android:text="@string/row3_title"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:baselineAligned="false"
                    >
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        >
                        <ImageView
                            android:id="@+id/row3_icon1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/icon1"
                            />
                        <TextView
                            android:id="@+id/row3_subtitle1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/row3_icon1"
                            android:layout_toRightOf="@id/row3_icon1"
                            android:textSize="16sp"
                            android:text="@string/row3_subtitle1"
                            />
                        <TextView
                            android:id="@+id/row3_content1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/row3_icon1"
                            android:layout_toRightOf="@id/row3_icon1"
                            android:layout_below="@id/row3_subtitle1"
                            android:textSize="14sp"
                            android:text="@string/row3_content1"
                            android:maxLines="2"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        >
                        <ImageView
                            android:id="@+id/row3_icon2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/icon2"
                            />
                        <TextView
                            android:id="@+id/row3_subtitle2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/row3_icon2"
                            android:layout_toRightOf="@id/row3_icon2"
                            android:textSize="16sp"
                            android:text="@string/row3_subtitle2"
                            />
                        <TextView
                            android:id="@+id/row3_content2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/row3_icon2"
                            android:layout_toRightOf="@id/row3_icon2"
                            android:layout_below="@id/row3_subtitle2"
                            android:textSize="14sp"
                            android:text="@string/row3_content2"
                            android:maxLines="2"
                            />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    >
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        >
                        <ImageView
                            android:id="@+id/row3_icon3"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/icon3"
                            />
                        <TextView
                            android:id="@+id/row3_subtitle3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/row3_icon3"
                            android:layout_toRightOf="@id/row3_icon3"
                            android:textSize="16sp"
                            android:text="@string/row3_subtitle3"
                            />
                        <TextView
                            android:id="@+id/row3_content3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/row3_icon3"
                            android:layout_toRightOf="@id/row3_icon3"
                            android:layout_below="@id/row3_subtitle3"
                            android:textSize="14sp"
                            android:text="@string/row3_content3"
                            android:maxLines="2"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        >
                        <ImageView
                            android:id="@+id/row3_icon4"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/icon4"
                            />
                        <TextView
                            android:id="@+id/row3_subtitle4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/row3_icon4"
                            android:layout_toRightOf="@id/row3_icon4"
                            android:textSize="16sp"
                            android:text="@string/row3_subtitle4"
                            />
                        <TextView
                            android:id="@+id/row3_content4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/row3_icon4"
                            android:layout_toRightOf="@id/row3_icon4"
                            android:layout_below="@id/row3_subtitle4"
                            android:textSize="14sp"
                            android:text="@string/row3_content4"
                            android:maxLines="2"
                            />
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomBarDes"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_above="@+id/bottomBar"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:padding="2dp"
            android:text="@string/style"
            android:gravity="center_horizontal"
            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:padding="2dp"
            android:text="@string/adview_type"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/statusBar"
        android:orientation="horizontal"
        android:paddingBottom="0dp"
        android:paddingTop="0dp"
        android:minHeight="30dp"
        android:gravity="center_vertical"
        >
        <Spinner
            android:id="@+id/backgroundColorSpinner"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            />
        <Spinner
            android:id="@+id/adViewTypeSpinner"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            />
        <Button
            android:id="@+id/showCodeButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/show_code"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/statusBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="2dp"
            android:textAlignment="center"
            android:gravity="start"
            />
    </LinearLayout>

</RelativeLayout>
